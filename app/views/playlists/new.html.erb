<% content_for :body_class, "not-home" %>
<div class="row">
  <h4 class="left-align black-text col s12">Welcome, <%= "#{current_user.username}" %>!</h4>
</div>
  </div><br><br>
<div class="container">
  <div class="row center-align">

    <div class="col l6">
      <%= form_tag("/playlists", method: "post") do %>
        <h5>Choose Your Activity:</h5>
        <div class="input-field col s12 offset-s4 light-green"><%= select_tag "activity",
          "<option>hiking - easy</option><option>hiking - moderate</option><option>hiking - hard</option>
           <option>running - easy</option><option>running - moderate</option><option>running - hard</option>
           <option>biking - easy</option><option>biking - moderate</option><option>biking - hard</option>".html_safe %></div>
        <h5>Enter Time:</h5>
        <!-- <%= label_tag 'time' %> -->
        <div class="input-field col s12 offset-s4 light-green"><input placeholder="minutes"<%= text_field_tag 'time' %></div>>
        <%= submit_tag "Create Playlist", class: "btn light-green playlist-button" %>
      <% end %>
    </div>

  </div><br><br><br><br>
</div>
  <div class="map"><%= image_tag "trail.gif" %></div>

